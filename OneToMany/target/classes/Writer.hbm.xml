<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.sample.CollectionMap.Writer" table="writer">
        <id name="id" type="int">
            <column name="id" />
            <generator class="increment" />
        </id>

        <property name="name" type="string">
            <column name="name" />
        </property>

        <set name="stories" cascade="save-update" order-by="info desc">
            <key>
                <column name="id" /> <!-- Foreign key column in the story table -->
            </key>
            <one-to-many class="com.sample.CollectionMap.Story" />
        </set>
    </class>
</hibernate-mapping>
